<div class="pg vote-pg">
  <a href="#poll/{{ title_slug }}/vote" class="btn btn-large btn-primary pull-right">Vote &raquo;</a>
  <h1>{{ title }}</h1>
  <p>{{ desc }}</p>

  <h2>Chart</h2>
  <p>
    [todo: impl]
  </p>

  <h2>Choices</h2>
  <ul id="opts">
    {{#each opts}}
      <li>
        <a href="#" class="btn btn-large disabled span6">{{ title }}</a>
      </li>
    {{/each}}
  </ul>
</div>