<div class="pg vote-pg row-fluid">
  <a href="#poll/{{ title_slug }}" class="btn btn-large btn-primary pull-right">View Results &raquo;</a>
  <h1>{{ title }}</h1>
  <p>{{ desc }}</p>

  <div class="row-fluid" id="opts">
    {{#each opts}}
      <div class="span6">
        <a href="javascript:void(0);" class="btn btn-large">{{ title }}</a>
      </div>
    {{/each}}
  </div>
</div>